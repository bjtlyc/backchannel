<% if notice %>
	<p id="notice"><%= notice %></p>
<% end %>

<h1>Your Pragmatic Catalog<h1>

<% @posts.each do |post| %>
	<div class="entry">
		<h3><%= post.title %></h3>
		<p>UserId:<%= sprintf("%08d",post.user_id) %></p>
		<p><%= post.category %></p>
		<%= sanitize(post.content) %>
		<%= button_to 'vote',votes_path(:post_id => post) %>	
		<%= link_to 'Make a Comment', new_comment_path(:post_id => post) %>
	</div>
<% end %>

